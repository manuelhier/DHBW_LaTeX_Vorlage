{
  // ============================================================================
  // LATEX WORKSHOP EXTENSION SETTINGS - DOCKER-FIRST CONFIGURATION
  // ============================================================================
  // This template uses Docker for all builds (like Overleaf)
  // Press Ctrl+Enter to build â†’ LaTeX Workshop triggers Docker automatically
  // No local LaTeX installation needed!

  // ============================================================================
  // DOCKER BUILD CONFIGURATION (Built-in LaTeX Workshop Docker support)
  // ============================================================================

  // Enable Docker-based building via LaTeX Workshop's native Docker support
  "latex-workshop.docker.enabled": true,
  "latex-workshop.docker.image.latex": "texlive/texlive:latest-full",

  // ============================================================================
  // LATEX WORKSHOP CORE SETTINGS
  // ============================================================================

  // Auto-build on file save
  "latex-workshop.latex.autoBuild.run": "onSave",
  // Auto-clean on successful build
  "latex-workshop.latex.autoClean.run": "onSucceeded",
  // Disable clean and retry on failure
  "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
  // Show root file in status bar
  "latex-workshop.latex.build.rootfileInStatus": true,
  // Identify root file by \begin{document}
  "latex-workshop.latex.rootFile.indicator": "\\begin{document}",
  // Enable citation backend intellisense
  "latex-workshop.intellisense.citation.backend": "biblatex",
  // Enable LaTeX formatting
  "latex-workshop.formatting.latex": "tex-fmt",

  // PDF viewer settings
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.zoom": "page-width",
  "latex-workshop.synctex.afterBuild.enabled": true,

  // Show build on save notification
  "latex-workshop.showBuildOnSave": true,

  // Show context menu
  "latex-workshop.showContextMenu": true,

  // ============================================================================
  // SPELL CHECK SETTINGS (German + English)
  // ============================================================================

  "spellright.language": [
      "de_DE",
      "en_US"
  ],
  "spellright.documentTypes": [
      "markdown",
      "plaintext",
      "latex",
      "bibtex"
  ],
  "spellright.ignoreRegExps": [
      "\\\\cite{.*}",
      "\\\\ref{.*}",
      "\\\\label{.*}",
      "\\\\ac{.*}"
  ],

  // ============================================================================
  // EDITOR SETTINGS
  // ============================================================================

  "editor.wordWrap": "on",
  "editor.formatOnSave": false,
  "[latex]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "[bibtex]": {
    "editor.defaultFormatter": null
  }
}
