{
  // ============================================================================
  // LATEX WORKSHOP EXTENSION SETTINGS
  // ============================================================================
  // NOTE: This template primarily uses Docker for building (recommended)
  // Local latexmk is optional. If you have it installed, these settings apply.
  // If not, use: make docker-build or docker-compose up

  // Only enable auto-build if you have latexmk installed locally
  // Set to "never" if you want to use Docker builds instead
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.autoClean.run": "onBuilt",

  // LaTeX build tools configuration (for local builds with latexmk)
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-synctex=1",
        "-biber",
        "%DOCFILE%"
      ],
      "env": {}
    }
  ],

  // Default recipe (build configuration) - for local builds only
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (local only)",
      "tools": ["latexmk"]
    }
  ],

  // PDF viewer settings
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.zoom": "page-width",
  "latex-workshop.synctex.afterBuild.enabled": true,

  // ============================================================================
  // BUILD ADVICE FOR DOCKER USERS
  // ============================================================================
  // If you don't have latexmk installed, use one of these instead:
  //
  // Terminal: make              (builds with Docker)
  // Terminal: make docker-build (same, explicit)
  // Terminal: docker-compose up (alternative)
  //
  // See README.md for full setup instructions

  // ============================================================================
  // SPELL CHECK SETTINGS
  // ============================================================================

  "spellright.language": [
      "de_DE",
      "en_US"
  ],
  "spellright.documentTypes": [
      "markdown",
      "plaintext",
      "latex",
      "bibtex"
  ],
  "spellright.ignoreRegExps": [
      "\\\\cite{.*}",
      "\\\\ref{.*}",
      "\\\\label{.*}",
      "\\\\ac{.*}"
  ],

  // ============================================================================
  // EDITOR SETTINGS
  // ============================================================================

  "editor.wordWrap": "on",
  "editor.formatOnSave": false,
  "[latex]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "[bibtex]": {
    "editor.defaultFormatter": null
  },

  // LaTeX-specific settings
  "latex-workshop.showContextMenu": true,
  "latex-workshop.showBuildOnSave": false
}