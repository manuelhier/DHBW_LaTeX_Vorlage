{
  // ============================================================================
  // LATEX WORKSHOP EXTENSION SETTINGS - DOCKER-FIRST CONFIGURATION
  // ============================================================================
  // This template uses Docker for all builds (like Overleaf)
  // Press Ctrl+Enter to build â†’ LaTeX Workshop triggers Docker automatically
  // No local LaTeX installation needed!

  // ============================================================================
  // DOCKER BUILD CONFIGURATION
  // ============================================================================

  // LaTeX Workshop build tools
  "latex-workshop.latex.tools": [
    {
      "name": "docker-build",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v", "${workspaceFolder}:/work",
        "dhbw-latex"
      ],
      "env": {}
    },
    {
      "name": "docker-image-build",
      "command": "docker",
      "args": [
        "build",
        "-t", "dhbw-latex",
        "${workspaceFolder}"
      ],
      "env": {}
    }
  ],

  // LaTeX Workshop recipes (build workflows)
  "latex-workshop.latex.recipes": [
    {
      "name": "Docker (one-click build)",
      "tools": [
        "docker-image-build",
        "docker-build"
      ]
    }
  ],

  // Set Docker recipe as default
  "latex-workshop.latex.recipe.default": "Docker (one-click build)",

  // ============================================================================
  // LATEX WORKSHOP CORE SETTINGS
  // ============================================================================

  // Disable auto-build (we use Ctrl+Enter instead)
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.autoClean.run": "never",

  // PDF viewer settings
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.zoom": "page-width",
  "latex-workshop.synctex.afterBuild.enabled": true,

  // Build on save disabled (manual Ctrl+Enter only)
  "latex-workshop.showBuildOnSave": false,

  // Show context menu
  "latex-workshop.showContextMenu": true,

  // ============================================================================
  // SPELL CHECK SETTINGS (German + English)
  // ============================================================================

  "spellright.language": [
      "de_DE",
      "en_US"
  ],
  "spellright.documentTypes": [
      "markdown",
      "plaintext",
      "latex",
      "bibtex"
  ],
  "spellright.ignoreRegExps": [
      "\\\\cite{.*}",
      "\\\\ref{.*}",
      "\\\\label{.*}",
      "\\\\ac{.*}"
  ],

  // ============================================================================
  // EDITOR SETTINGS
  // ============================================================================

  "editor.wordWrap": "on",
  "editor.formatOnSave": false,
  "[latex]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "[bibtex]": {
    "editor.defaultFormatter": null
  }
}
